pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                git url: 'https://github.com/Lavanya0619/simple-bike-shopping-site', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install' 
                sh 'npm run build' 
            }
        }
        stage('Test') {
            steps {
                sh 'npm --version' 
                sh 'node --version'
            }
        }
        
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
