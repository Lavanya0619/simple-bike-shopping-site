pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'npm install' 
                sh 'npm run build' 
            }
        }
        stage('Test') {
            steps {
                sh 'npm --version' 
                sh 'node --version'
            }
        }
        
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
